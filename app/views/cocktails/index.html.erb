<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Les cocktails de Mike</h1>
      <%= link_to 'New Cocktail', new_cocktail_path, class: 'btn btn-primary' %>

      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
